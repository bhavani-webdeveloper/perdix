{
   "stages": [{
         "order": 1,
         "code": "journalEntry",
         "name": "journalEntry",
         "stageType": "CAPTURE",
         "isAccountPosting": false,
         "allowedRoles": [
            "WM"
         ]
      },{
         "order": 2,
         "code": "journalPosting",
         "name": "journalPosting",
         "stageType": "ACCOUNTINGPOSTING",
         "isAccountPosting": true,
         "allowedRoles": [
            "WM"
         ]
      }
   ],
   "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "title": "Comment",
      "required": [
         "journalEntry"
      ],
      "properties": {
         "journalEntry": {
            "title": "journal Entry",
            "type": "object",
            "required": [
               "transactionName",
               "transactionType",
               "transactionAmount",
               "transactionDate",
               "valueDate",
               "remarks"
            ],
            "properties": {
               "transactionName": {
                  "title": "Transaction Name",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 50,
                  "captureStages": [
                     "journalEntry",
                     "journalPosting"
                  ]
               },
               "relatedAccountNo": {
                  "title": "Related Account No",
                  "type": "String",
                  "minLength": 1,
                  "maxLength": 30,
                  "captureStages": [
                     "journalEntry",
                     "journalPosting"
                  ]
               },

               "transactionType": {
                  "title": "Transaction Type",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 20,
                  "captureStages": [
                     "journalEntry",
                     "journalPosting"
                  ]
               },

               "transactionAmount": {
                  "title": "Transaction Amount",
                  "type": "Integer",
                  "minimum": 1,
                  "maximum": 99999999,
                  "captureStages": [
                     "journalEntry",
                     "journalPosting"
                  ]
               },
               "transactionDate": {
                  "title": "Transaction Date",
                  "type": "string",
                  "format": "date",
                  "captureStages": [
                     "journalEntry",
                     "journalPosting"
                  ]
               },
               "valueDate": {
                  "title": "Value Date",
                  "type": "string",
                  "format": "date",
                  "captureStages": [
                     "journalEntry",
                     "journalPosting"
                  ]
               },
               "remarks": {
                  "title": "Remarks",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 200,
                  "captureStages": [
                     "journalEntry",
                     "journalPosting"
                  ]
               }
            }
         }
      }
   }
}